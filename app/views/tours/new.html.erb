<div class="new_tour">

  <h2 class="ta-c">Show Us What You See</h2>

  <%= form_for ([:user,@tour]) do |f| %>
    <div class="field">
      <%= f.label "Name your tour!" %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label "Describe your tour!" %>
    </div>

    <br>

    <%= f.text_area :description, :size=>"50%x10%", placeholder: "What are we going to be looking at on your tour?" %>
    <div class="ta-r">
      <%= f.submit "Create" %>
    </div>
  <% end %>

</div>