<div class="profile">
  <div class="personal">
    <img class="profile-pic" src=<%= "#{@user.image_url}" %>>


    <h1>Hello, <%= @user.first_name %>!</h1>
    <h3>Keep exploring new areas!</h3>
  </div>

  <div class="both-buttons">
    <div class="buttons">
      <%= button_to "Create New Tour", new_user_tour_path(@user.id), :method => :get %>
    </div>

    <div class="buttons">
      <%= button_to "Browse Tours", user_tours_path(@user.id), :method => :get %>
    </div>
    </div>
<div class="tour-lists">




    <h2>Tours You Created</h2>
      <% @user_tours.each do |tour| %>
        <div class="tour">
          <p><img src=<%= "#{tour.photo_url}" %>></p>
          <p><%= link_to ("#{tour.name}"), user_tour_path(@user.id, tour.id) %></p>
        </div>
      <% end %>


    </div>
  </div>
</div>
